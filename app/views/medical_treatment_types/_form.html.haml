= simple_form_for @medical_treatment_type, :html => { :class => 'form-horizontal', :multipart => true } do |f|
  = f.error_notification
  .form-inputs
    .col-md-12.text-right
      .form-buttons
        = link_to content_tag(:span, "", class: "glyphicon glyphicon-chevron-left") + 'Back', medical_treatment_types_path, :class => 'btn btn-default'
        = f.button :submit, :class => 'btn btn-default'
    .col-md-12
      %fieldset
        = f.input :name
        = f.input :price
    .col-md-12.text-right
      %br
        .form-buttons
          = link_to content_tag(:span, "", class: "glyphicon glyphicon-chevron-left") + 'Back', medical_treatment_types_path, :class => 'btn btn-default'
          = f.button :submit, :class => 'btn btn-default'
