- if user_signed_in?
	.col-md-6
		.well.well-sm
			Welcome #{current_user.email} #{current_user.office.name}
	.col-md-6
		- if @unpaied_medical_treatments_count > 0
			.well.well-sm
				= link_to @unpaied_medical_treatments_count.to_s + ' Medical Treatment unpaied', medical_treatments_path(locale: I18n.locale, q: {status_eq: 0})


- else
	.col-md-6
		.well.well-sm
			= link_to 'Login', new_user_session_path
	.col-md-6
		.well.well-sm
			= link_to 'Register', new_user_registration_path
