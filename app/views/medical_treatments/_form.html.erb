<%= simple_form_for(@medical_treatment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :user_id %>
    <%= f.input :patient_id %>
    <%= f.input :date %>
    <%= f.input :location_id %>
    <%= f.input :treatment_type_id %>
    <%= f.input :price %>
    <%= f.input :note %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
