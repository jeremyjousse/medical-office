$(".modal-body-content").html("<%= escape_javascript(render 'patients/medical_treatments/payments/modal_form' ) %>");
$(".modal-title").html("Add a payment");
$(".modal-footer").html("<%= escape_javascript(render 'patients/medical_treatments/payments/modal_form_buttons' ) %>");
$('#new_payment_form_submiter').bind( "click", function() {
  $('#new_payment_form_submiter').html($('#new_payment_form_submiter').attr('data-disable-with'));
  $('#new_payment_form_submiter').attr("disabled", "disabled");
  $('#new_payment').submit();
});
$(".datepicker").datepicker({"format": "yyyy-mm-dd", "weekStart": 1, "autoclose": true});
$("#payment_payment_type").change(function(){
	$.getScript('<%= new_patient_medical_treatment_payment_path(medical_treatment_id: @medical_treatment.id, locale: I18n.locale) %>?payment_type='+$("#payment_payment_type").val());
});
